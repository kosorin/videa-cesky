                        <Path Data="M20.767953,3.9810952C20.328064,3.9812204 19.8883,4.1492261 19.553289,4.4847366 18.882268,5.1567589 18.882268,6.2447945 19.553289,6.9148165 20.22331,7.5858384 21.312346,7.5858384 21.983367,6.9148165 22.654389,6.2447945 22.655389,5.1567589 21.983367,4.4847366 21.647857,4.1487259 21.207842,3.9809703 20.767953,3.9810952z M17.465273,0.7463401C17.479101,0.74580087,17.493038,0.74601926,17.507038,0.74701866L25.283023,1.3420517C25.466037,1.3560287,25.606021,1.4970202,25.619021,1.6770132L26.140046,9.5310313C26.148042,9.6400419,26.106019,9.7500273,26.028047,9.8290678L15.099052,20.665086C15.028069,20.735033 14.933068,20.778062 14.833062,20.781053 14.733056,20.781053 14.638055,20.744066 14.567041,20.674059L6.2890725,12.394013C6.2200725,12.325043 6.1810711,12.229035 6.1830852,12.130036 6.1850689,12.031037 6.2260845,11.934052 6.2990826,11.863068L17.20705,0.86103256C17.277039,0.79101751,17.368476,0.7501153,17.465273,0.7463401z M12.224042,0.00024056435C12.237869,-0.00024592876,12.251807,4.0531158E-06,12.265808,0.0010040402L15.890998,0.27800217 4.4063958,11.853927C4.3333919,11.923927 4.2913897,12.021927 4.2913898,12.121926 4.2893896,12.220925 4.3273916,12.314925 4.3973953,12.384925L10.902736,18.889883C9.7266746,20.056875 8.915632,20.86087 8.9156322,20.86087 8.8436284,20.931869 8.7486234,20.973869 8.6486182,20.975868 8.549613,20.978868 8.454608,20.939869 8.3846042,20.868869L0.10517025,12.590923C0.03516674,12.519923 -0.0028352737,12.426924 0.00016498566,12.327924 0.00016498566,12.226925 0.043167114,12.130926 0.11417103,12.058926L11.966792,0.11400324C12.035921,0.043128729,12.127254,0.0036446452,12.224042,0.00024056435z"
                              Stretch="Uniform"
                              Fill="{ThemeResource PhoneForegroundBrush}"
                              Width="24"
                              Height="24" />
                    </Viewbox>
                    <TextBlock Text="tagy"
                               Margin="8,-2,0,0"
                               Style="{StaticResource BaseDetailTextStyle}"
                               VerticalAlignment="Center" />
                </StackPanel>
                <ItemsControl ItemsSource="{Binding Tags}"
                              Margin="0,5,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <controls:WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    Click="TagButton_Click"
                                    Margin="0,0,5,5">
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--Komentáře-->
                <StackPanel Orientation="Horizontal"
                            Margin="0,20,0,5">
                    <Viewbox>
                        <Path Data="M63.999996,18.073C75.039375,18.073 83.987999,27.021107 83.987999,38.060093 83.987999,45.185016 80.249702,51.420254 74.638161,54.960716L78.53746,66.255996 67.361382,57.743488C66.266457,57.929485 65.14843,58.048084 63.999996,58.048084 52.960621,58.048084 44.012001,49.098976 44.012001,38.060093 44.012001,27.021107 52.960621,18.073 63.999996,18.073z M0,0L64,0 64,11.406C49.302826,11.405999 37.346001,23.36313 37.346001,38.060093 37.346001,41.045597 37.839336,43.918018 38.748764,46.600113L38.955521,47.186001 21.946999,47.186001 11.108,63.462002 11.108,47.186001 0,47.186001z"
                              Stretch="Uniform"
                              Fill="{ThemeResource PhoneForegroundBrush}"
                              Width="24"
                              Height="24" />
                    </Viewbox>
                    <TextBlock Text="komentáře"
                               Margin="8,-2,0,0"
                               Style="{StaticResource BaseDetailTextStyle}"
                               VerticalAlignment="Center" />
                </StackPanel>
                <ListView ItemsSource="{Binding Comments}">
                    <!--<models:Comment Author="Ctibor"
                                    Date="2014-05-08 14:45"
                                    KarmaDown="2"
                                    KarmaUp="4"
                                    Text="Karel je best" />-->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="{Binding Level, Converter={StaticResource CommentLevelConverter}}">
                                <Grid Margin="0,16,0,8"
                                      HorizontalAlignment="Left">
                                    <Path x:Name="Path"
                                          Data="m0,0 l12,0 l-12,-12 l0,12"
                                          Fill="{ThemeResource CommentBackgroundBrush}"
                                          Margin="4,0"
                                          HorizontalAlignment="Left">
                                        <i:Interaction.Behaviors>
                                            <ic:DataTriggerBehavior Binding="{Binding IsPopular}"
                                                                    Value="True"
                                                                    ComparisonCondition="Equal">
                                                <ic:ChangePropertyAction PropertyName="Fill"
                                                                         Value="{ThemeResource PhoneAccentBrush}" />
                                            </ic:DataTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                    </Path>
                                    <Border Padding="6,2,6,4"
                                            Background="{ThemeResource CommentBackgroundBrush}">
                                        <i:Interaction.Behaviors>
                                            <ic:DataTriggerBehavior Binding="{Binding IsPopular}"
                                                                    Value="True"
                                                                    ComparisonCondition="Equal">
                                                <ic:ChangePropertyAction PropertyName="Background"
                                                                         Value="{ThemeResource PhoneAccentBrush}" />
                                            </ic:DataTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Author}"
                                                       Style="{StaticResource BaseDetailTextStyle}"
                                                       FontSize="16" />
                                            <controls:WrapPanel>
                                                <TextBlock Text="{Binding Date, Converter={StaticResource DateTimeConverter}}"
                                                           Style="{StaticResource BaseDetailTextStyle}"
                                                           Opacity="0.5"
                                                           FontSize="14.667" />
                                                <TextBlock Style="{StaticResource BaseDetailTextStyle}"
                                                           Opacity="0.8"
                                                           FontSize="14.667"
                                                           FontFamily="Segoe UI Symbol"
                                                           Margin="20,0,0,0">
                                                <Run Text="&#xe19f;"
                                                     Foreground="Green" />
                                                <Run Text="{Binding KarmaUp}" />
                                                <Run Text="  &#xe19e;"
                                                     Foreground="Red" />
                                                <Run Text="{Binding KarmaDown}" />
                                                </TextBlock>
                                            </controls:WrapPanel>
                                            <TextBlock models:Comment.CommentText="{Binding Text}"
                                                       Style="{StaticResource BaseDetailTextStyle}"
                                                       FontSize="16" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</paging:MtPage>
