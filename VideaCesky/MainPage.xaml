        </StackPanel>
        <StackPanel Margin="80,0,0,0">
            <TextBlock Text="chyby" Style="{ThemeResource SubheaderTextBlockStyle}" />
            <Button Click="Button_Click_Video" Content="video" />
            <Button Click="Button_Click_Subtitles" Content="titulky" />
        </StackPanel>
