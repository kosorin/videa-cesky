<Page
    x:Class="VideaCesky.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideaCesky"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="Level1Style" BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{ThemeResource PhoneFontFamilySemiLight}"/>
            <Setter Property="FontSize" Value="{ThemeResource TextStyleExtraLargePlusFontSize}"/>
            <Setter Property="TextWrapping" Value="WrapWholeWords"/>
            <Setter Property="LineHeight" Value="33.5"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        <Style x:Key="Level2Style" TargetType="TextBlock" BasedOn="{StaticResource Level1Style}">
            <Setter Property="FontSize" Value="{ThemeResource TextStyleExtraLargeFontSize}"/>
            <Setter Property="LineHeight" Value="30"/>
            <Setter Property="Margin" Value="10,10,0,0"/>
            <Setter Property="Opacity" Value="0.85"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock Text="VideaČesky.cz" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0"/>
            <TextBlock Text="návod" Margin="0,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
        </StackPanel>

        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,0,19,0">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Style="{ThemeResource Level1Style}">1. <Run Foreground="{ThemeResource PhoneAccentBrush}">zkopíruj</Run> následující text</TextBlock>
                    <TextBox IsTextPredictionEnabled="False">
                        <TextBox.Text>
                            javascript: location.href =  "videacesky:" + location.href
                        </TextBox.Text>
                    </TextBox>
                    <TextBlock Style="{ThemeResource Level1Style}">2. v Internet Exploreru <Run Foreground="{ThemeResource PhoneAccentBrush}">vytvoř oblíbenou položku</Run></TextBlock>
                    <TextBlock Style="{ThemeResource Level2Style}">2.1. spusť aplikaci Internet Explorer</TextBlock>
                    <TextBlock Style="{ThemeResource Level2Style}">2.2. v menu vyber <Bold>"přidat k oblíbeným položkám"</Bold> (musí být načtená libovolná stránka, jinak bude položka neaktivní)</TextBlock>
                    <TextBlock Style="{ThemeResource Level2Style}">2.3. do pole pro <Bold>webovou adresu</Bold> vlož zkopírovaný text</TextBlock>
                    <TextBlock Style="{ThemeResource Level2Style}">2.4. <Bold>název</Bold> je na tobě, ale doporučuji ho zvolit tak, aby oblíbená položka byla na začátku seznamu pro rychlejší výběr. Toho se dá lehce docílit pomocí nějakého speciálního znaku na začátku názvu, např.: !+#$*</TextBlock>
                    <TextBlock Style="{ThemeResource Level1Style}">3. pak už stačí <Run Foreground="{ThemeResource PhoneAccentBrush}">na stránce s videem vybrat oblíbenou položku</Run> a spustí se přehrávání videa</TextBlock>
                    <Border Height="40" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
